{
  "extends": "assemblyscript/std/assembly.json",
  "include": ["./**/*.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "../build",
    "newLine": "lf",
    "allowJs": false,
    "noLib": true,
    "types": ["assemblyscript/std/assembly"],
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "stripInternal": true,
    "noEmit": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true
  }
}
