{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./greenova/static/ts/types",
    "outDir": "./greenova/static/ts/dist",
    "rootDir": "./greenova/static/ts/src",
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["greenova/static/ts/src/modules/*"],
      "@utils/*": ["greenova/static/ts/src/utils/*"],
      "@pages/*": ["greenova/static/ts/src/pages/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "types": ["gsap"]
  },
  "include": ["greenova/static/ts/src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
